{
  "name": "web",
  "version": "1.0.0",
  "description": "Web frontend for savitri.in",
  "main": "index.js",
  "repository": {
    "url": "https://github.com/savitri/web.git",
    "type": "git"
  },
  "author": "Prashant Tiwari <prashaantt@gmail.com>",
  "scripts": {
    "start": "per-env",
    "start:development": "npm run serve",
    "start:production": "npm run buildServer && npm run buildClient && npm run serve",
    "build-server": "tsc",
    "build-server-test": "tsc --noEmit",
    "buildClient": "webpack --config config/webpack.config.prod.js",
    "serve": "per-env",
    "serve:development": "ts-node -F src/server/dev-server",
    "serve:production": "nohup node -r dotenv/config build/server/prodServer &",
    "compile": "tsc --noEmit",
    "lint": "tslint -c ./tslint.json './src/**/*.ts?(x)'"
  },
  "pre-commit": {
    "run": [
      "lint",
      "compile"
    ],
    "silent": true
  },
  "license": "MIT",
  "dependencies": {
    "core-js": "^2.4.1",
    "fbjs": "^0.8.5",
    "handlebars": "^4.0.5",
    "hapi": "^15.2.0",
    "inert": "^4.0.2",
    "isomorphic-fetch": "^2.2.1",
    "joi": "^9.2.0",
    "joi-browser": "^9.1.0",
    "material-ui": "^0.16.1",
    "mobx": "^2.6.2",
    "mobx-react": "^3.5.9",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^3.0.0",
    "react-tap-event-plugin": "^1.0.0",
    "savitri-shared": "https://github.com/savitri/shared.git#1.0.4",
    "vision": "^4.1.0"
  },
  "devDependencies": {
    "@types/core-js": "^0.9.34",
    "@types/dotenv": "^2.0.19",
    "@types/handlebars": "^4.0.31",
    "@types/hapi": "^13.0.37",
    "@types/history": "^2.0.39",
    "@types/isomorphic-fetch": "^0.0.31",
    "@types/joi": "^9.0.32",
    "@types/material-ui": "^0.16.38",
    "@types/node": "^6.0.46",
    "@types/react": "^0.14.46",
    "@types/react-dom": "^0.14.18",
    "@types/react-router": "^2.0.38",
    "@types/react-tap-event-plugin": "^0.0.30",
    "awesome-typescript-loader": "^2.2.4",
    "dotenv": "^2.0.0",
    "exiting": "^2.0.1",
    "hapi-webpack-dev-middleware": "^2.0.0",
    "hapi-webpack-hot-middleware": "^2.0.0",
    "mobx-react-devtools": "^4.2.9",
    "per-env": "^1.0.2",
    "pre-commit": "^1.1.3",
    "react-hot-loader": "3.0.0-beta.6",
    "ts-node": "^1.7.0",
    "tslint": "^3.15.1",
    "tslint-react": "^1.1.0",
    "typescript": "^2.0.8",
    "webpack": "2.1.0-beta.25",
    "webpack-notifier": "^1.4.1"
  }
}
